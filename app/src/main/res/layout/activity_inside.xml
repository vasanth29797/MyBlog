<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elite.blog.Inside">

    <ImageView
        android:id="@+id/iv_inside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_inside_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/iv_inside"
        android:text="Title goes here..."
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tv_inside_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tv_inside_title"
        android:text="Description goes here..."
        android:padding="8dp"/>

    <Button
        android:id="@+id/btn_inside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Remove Post"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:visibility="invisible"/>

</android.widget.RelativeLayout>
